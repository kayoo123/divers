#!/bin/bash
#
####################################
# Simple test au ping pour déterminer si DMZ 
# Date: 25/01/2016
# Réalisé par Jérémi Desesquelles 
# Version : 0.2
#####################################
clear

## Boucle sur les Adresses IP
for server in 'KIEV' 'BASTIA' 'BREST' 'PGP' 'BRIVE' 'CAHORS' 'DIOGENE' 'EPICURE' 'CREMONE' 'ORANGE' 'ORANGE_BACKUP' 'BBDDS101' 'BIISS101' 'PRYPIAT' 'ALES' 'LYON' 'NICE' 'SETE' 'LAGOS' 'ANTHROPO' 'HELICONIA' 'CDEC-AP1' 'CDEC-AP2' 'CDEC-DB1' 'CDEC-DB2' 'CGAS-AP1' 'CGAS-AP2' 'CGAS-DB1' 'CGAS-DB2' 'CGAS-DB3' 'CGAS-DB4' 'ASWCS101V' 'BRACCA' 'RINA' 'ARIEL' 'CALLIOPE-1' 'CALLIOPE-2' 'CALLIOPE-3' 'CALLIOPE-5' 'CALLIOPE-6' 'CALLIOPE-7' 'POLYMESTOR' 'HARARE' 'OTTAWA' 'HECUBE' 'MELETE' 'TERPSICHORE' 'ALLOS' 'ESPARRON' 'ORONAYE' 'BDEVS102' 'BDEVS102V' 'HERCULE' 'MALABO' 'PERSIL' 'SAFRAN' 'TOURS' 'BRAMANT' 'PIVOINE' 'AAMSS101V' 'AAMSS102V' 'ABDDS101' 'AIFPS101' 'AIFPS102' 'AIFQS101' 'AWEBS101V' 'ALAMANDA' 'AMUPS101' 'AMUQS101' 'AGIPS112' 'DORONIC' 'MOKARA' 'ANTHURIUM' 'POLYMNIE' 'WEBTRANS' 'CARAMBOLE' 'AMIPS101' 'YUCCA' 'YUCCABIS' 'AROME' 'AROME2' 'ANTHURIUM' 'ACCTS101V' 'ACCAS101V' 'ACMCS101V' 'ADISS102' 'AFAXS101' 'AWIFIS101' 'CSAUS101' 'GSTOS101' 'LENS' 'MSAUS101' 'MSTOS101' 'VDISS102' 'VMESS101' 'VMESS102' 'BMESS101' 'BMESS102' 'AMESS101' 'AMESS102' 'AMESS103' 'AMESS104'
do


## MAIN
ping -c 2 $server &> /dev/null  && echo "[OK] $server " || echo "[NOK] $server" 
done
